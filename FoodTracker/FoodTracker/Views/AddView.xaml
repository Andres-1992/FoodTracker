<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodTracker.Views.AddView"
             xmlns:zxing="clr-namespace:ZXing.Net.Mobile.Forms;assembly=ZXing.Net.Mobile.Forms" xmlns:viewmodels="clr-namespace:FoodTracker.ViewModels"
             x:DataType="viewmodels:AddViewModel">
    <ContentPage.BindingContext>
        <viewmodels:AddViewModel>
            
        </viewmodels:AddViewModel>
    </ContentPage.BindingContext>

    <StackLayout>

            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>                   
                </Grid.RowDefinitions >

            <Entry Placeholder="EAN" Text="{Binding Item.ean,Mode=OneWayToSource}" Grid.Column="5" Grid.Row="1" ClearButtonVisibility="WhileEditing"/>
            <ImageButton  Source="@android:drawable/camera2" Command="{Binding ToggleScannerCommand}"  Grid.Column="2" HeightRequest="40" WidthRequest="40"   Grid.Row="1"/>
            <zxing:ZXingScannerView x:Name="Scanner" IsVisible="{Binding ScannerToggled,Mode=TwoWay}"  IsScanning="True" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" />

            <ScrollView Grid.Row="4"  Grid.Column="1" Grid.ColumnSpan="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="15"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>
                        
                        <Entry Placeholder="Name" Text="{Binding Item.name}" Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Brand" Text="{Binding Item.brand}" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Energy" Text="{Binding Item.energy,Mode=OneWayToSource}" Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Carbs" Text="{Binding Item.carbs,Mode=OneWayToSource}" Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Protein" Text="{Binding Item.protein,Mode=OneWayToSource}" Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Sodium" Text="{Binding Item.sodium,Mode=OneWayToSource}" Grid.Row="6" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Fat" Text="{Binding Item.fat,Mode=OneWayToSource}" Grid.Row="7" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Saturated fat" Text="{Binding Item.satfat,Mode=OneWayToSource}" Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Salt" Text="{Binding Item.salt,Mode=OneWayToSource}" Grid.Row="9" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>
                    <Entry Placeholder="Sugar" Text="{Binding Item.sugar,Mode=OneWayToSource}" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="5" ClearButtonVisibility="WhileEditing"/>

                        <Label  Grid.Column="2" Grid.Row="11" Text="Organic"  VerticalOptions="Center" />
                    <CheckBox  IsChecked="{Binding Item.organic}" Grid.Column="3" Grid.Row="11" Grid.ColumnSpan="5" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Grid.Row="12" Text="Fairtrade" VerticalOptions="Center"/>
                    <CheckBox IsChecked="{Binding Item.fairtrade}" Grid.Column="3" Grid.Row="12" Grid.ColumnSpan="5" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Grid.Row="13" Text="Eco"  VerticalOptions="Center"/>
                    <CheckBox IsChecked="{Binding Item.eco}" Grid.Column="3" Grid.Row="13" Grid.ColumnSpan="5" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Grid.Row="14" Text="Vegetarian"  VerticalOptions="Center"/>
                    <CheckBox IsChecked="{Binding Item.vegetarian}" Grid.Column="3" Grid.Row="14" Grid.ColumnSpan="5" VerticalOptions="Center"/>
                        <Label Grid.Column="2" Grid.Row="15" Text="Vegan"  VerticalOptions="Center"/>
                    <CheckBox IsChecked="{Binding Item.vegan}" Grid.Column="3" Grid.Row="15" Grid.ColumnSpan="5" VerticalOptions="Center"/>
                        <Entry Placeholder="healthnotes" Text="{Binding Item.healthnotes}" Grid.Column="1" Grid.Row="16" Grid.ColumnSpan="5"/>
                    <Button Text="Add" Command="{Binding AddItemCommand}" Grid.Column="1" Grid.ColumnSpan="4" Grid.Row="17"/>

                </Grid>
                
                </ScrollView>


        </Grid>





        </StackLayout>


 
</ContentPage>